<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nttungpc.calculatorapp.MainActivity"
    android:padding="16dp">
    <LinearLayout
        android:id="@+id/ll_result"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/layout_bd"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="end"
            android:textSize="50sp"
            android:layout_weight="2"/>
        <TextView
            android:id="@+id/tv_bfresult"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="end"
            android:textSize="25sp"
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_result"
        android:layout_marginTop="16dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_clean"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/layout_button"
                android:text="AC"
                android:textColor="#ff5900"
                android:textSize="50sp"
                android:onClick="onClick"/>

            <Button
                android:id="@+id/bt_c"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/layout_buttonclear"
                android:textSize="50sp"
                android:onClick="onClick"/>

            <Button
                android:id="@+id/bt_math"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="âˆš"
                android:textSize="60sp"
                android:background="@drawable/layout_button"
                android:onClick="onClick"/>

            <Button
                android:id="@id/bt_math"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/layout_button"
                android:text="+"
                android:textSize="60sp"
                android:onClick="onClick"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_num"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/layout_button"
                android:onClick="onClick"
                android:text="7"
                android:textSize="60sp" />

            <Button
                android:id="@id/bt_num"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="8"
                android:textSize="60sp"
                android:background="@drawable/layout_button"
                android:onClick="onClick"/>
            <Button
                android:id="@id/bt_num"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="9"
                android:textSize="60sp"
                android:background="@drawable/layout_button"
                android:onClick="onClick"/>

            <Button
                android:id="@id/bt_math"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="-"
                android:textSize="60sp"
                android:background="@drawable/layout_button"
                android:onClick="onClick"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@id/bt_num"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="4"
                android:textSize="60sp"
                android:background="@drawable/layout_button"
                android:onClick="onClick"/>
            <Button
                android:id="@id/bt_num"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="5"
                android:textSize="60sp"
                android:background="@drawable/layout_button"
                android:onClick="onClick"/>

            <Button
                android:id="@id/bt_num"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/layout_button"
                android:text="6"
                android:textSize="60sp"
                android:onClick="onClick"/>

            <Button
                android:id="@id/bt_math"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/layout_button"
                android:onClick="onClick"
                android:text="x"
                android:textSize="50sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@id/bt_num"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="1"
                android:textSize="60sp"
                android:background="@drawable/layout_button"
                android:onClick="onClick"/>

            <Button
                android:id="@id/bt_num"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="2"
                android:textSize="60sp"
                android:background="@drawable/layout_button"
                android:onClick="onClick"/>

            <Button
                android:id="@id/bt_num"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/layout_button"
                android:text="3"
                android:textSize="60sp"
                android:onClick="onClick"/>

            <Button
                android:id="@id/bt_math"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text=":"
                android:textSize="60sp"
                android:background="@drawable/layout_button"
                android:onClick="onClick"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@id/bt_num"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="0"
                android:textSize="60sp"
                android:background="@drawable/layout_button"
                android:onClick="onClick"/>

            <Button
                android:id="@+id/bt_dot"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="."
                android:textSize="60sp"
                android:background="@drawable/layout_button"
                android:onClick="onClick"/>

            <Button
                android:id="@+id/bt_bh"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:background="@drawable/layout_button"
                android:text="="
                android:textSize="60sp"
                android:onClick="onClick"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
